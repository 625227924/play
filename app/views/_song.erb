<div class="song" data-path="<%= song.path %>">
  <a href="/artist/<%= song.artist_name %>/album/<%= song.album_name %>" class="album-art">
    <img src="/images/art/<%= song.art_file %>" width="100" height="100" />
  </a>
  <a href="/download/album/<%= song.path %>" class="album-download" title="Download this album">
    <span class="icon-cloud-download"></span>
  </a>
  <div class="details">
    <span class="duration"> <%= song.duration %></span>
    <h2 class="title"><a href="<%= song.escaped_path %>"><%= song.title %></a></h2>

    <div class="meta">
      <a href="<%= song.escaped_artist_path %>" class="artist"><span class="icon-user"></span><%= song.artist_name %></a>
      <a href="<%= song.escaped_album_path %>" class="album"><span class="icon-music"></span><%= song.album_name %></a>
    </div>

    <div class="controls">
      <a href="/download/<%= song.path %>"><span class="icon-cloud-download"></span></a>
      <%= partial :like, :locals => {:song => song} %>
      <%= partial :add, :locals => {:song => song} %>
    </div>
  </div>
</div>