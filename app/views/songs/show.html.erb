<div id="queue">
  <div class="heading">
    <span class="plays"><%= number_with_delimiter @song.plays.count %> plays</span>
    <span class="title"><%= @song.title %></span>
  </div>

  <h2>Fans</h2>
  <div class="fans">
    <% @song.likes.each do |like| %>
      <a href="/<%= like.user.login %>">
        <img src="http://www.gravatar.com/avatar/<%= like.user.gravatar_id %>?s=100" alt="<%= like.user.login %>" />
      </a>
    <% end %>
  </div>
</div>
