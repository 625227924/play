<div id="queue">
  <div class="heading">
    Songs and albums by: <span class="title"><%= @artist.name %></span>
  </div>

  <div class="tabs">
    <a href="<%= @artist.escaped_path %>">albums</a>
    <a href="<%= @artist.escaped_path %>/songs">songs</a>
    <a href="<%= @artist.escaped_path %>/about"></a>
  </div>

  <% if @albums %>
    <%= partial :album, :collection => @albums %>
  <% else %>
    <%= partial :track, :collection => @songs %>
  <% end %>
</div>